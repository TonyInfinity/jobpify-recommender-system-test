<div id="map">
<iframe 
src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15739740.548718201!2d96.86454584814689!3d15.607130581575383!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31157a4d736a1e5f%3A0xb03bb0c9e2fe62be!2zVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1549092112673" 
width="100%" 
height="450" 
style="border:1px solid #D3D3D3" 
allowfullscreen>
</iframe>
</div>
<a class="button" id="btnsave" onclick="screenShot()">
    <span class="icon is-small">
        <i class="fa fa-check"></i>
    </span>
    <span>Lưu bản đồ</span>
</a>

<script type="text/javascript">
function screenShot(){
    html2canvas(document.getElementById('map')).then(function(canvas) {
        //document.body.appendChild(canvas);
        var a = document.createElement('a');
        a.href = canvas.toDataURL('image/jpeg').replace('image/jpeg', 'image/octet-stream');
        a.download = 'yayber-google-maps-screenshot.jpg';
        a.click();
    });
}
</script>