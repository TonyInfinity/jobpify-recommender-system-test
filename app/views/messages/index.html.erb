<script>
window.onload=function(){var objDiv=document.getElementById("dyn-height");objDiv.scrollTop=objDiv.scrollHeight}
</script>
<section class="hero has-background-white-bis">
<section class="hero-body has-background-white-bis">
<a class="button is-text" href="/conversations/">Trở về</a>
<br>
<br>
<div class="box">
<div class="dyn-height" id="dyn-height">
 <% @messages.each do |message| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
  <article class="message">
  <div class="message-body">
      <p><b><%= user.name %></b> - <i><%= message.message_time %></i></p>
     <%= message.body %>
  </div>
  </article>
 <% end %>
<% end %>
</div>
</div>
<div class="box">
    <%= form_for [@conversation, @message] do |f| %>
  <div class="field has-addons">
  <div class="control is-expanded">
    <%= f.text_area :body, class: "input" %>
  </div>
  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
  <div class="control">
    <%= f.submit "Enter", class: "button is-info" %>
  </div>
  </div>
    <% end %>
  </div>
 </section>
</section>